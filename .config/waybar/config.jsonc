{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    //"gtk-layer-shell": "false",
    //"output": ["eDP-1", "HDMI-A-1"],
    "height": 45, // Waybar height (to be removed for auto height)
    // "width": 2560, // Waybar width
    "spacing": 0, // Gaps between modules (0px) Adjusted in the css
    "margin-top": 0,
    //"margin-bottom":-10,
    "margin-left": 10,
    "margin-right": 10,
    // Choose the order of the modules
    "modules-left": [
        "custom/launcher",
        "cpu",
        "memory",
        "temperature#cpu",
        //"temperature#gpu",
        "disk#default",
        //"disk#system",
        //"disk#data",
        "battery",
        "backlight",
        "custom/monitor",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "custom/updates",
        "custom/notifications",
        // "network",
        "custom/sound",
        // "wireplumber",
        "hyprland/language",
        "custom/weather",
        "clock",
        // "custom/cycle_wall",
        // "custom/clipboard",
        "custom/power"
        // "custom/custom"
    ],
    "custom/launcher": {
        "format": "{}",
        "tooltip": true,
        "exec": "echo '{\"text\":\"󰣇\",\"tooltip\":\"Launcher\"}'",
        "return-type": "json",
        "on-click": "pkill rofi || rofi -show drun"
    },
    "hyprland/workspaces": {
        // "format": "{icon} {name}",
        "sort-by": "id",
        "disable-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "Music": "󰎇",
            "Carla": "󰙽",
            "Telegram": "",
            // "active": "",
            "default": ""
        },
        "on-scroll-up": "hyprctl dispatch workspace m-1",
        "on-scroll-down": "hyprctl dispatch workspace m+1",
        "on-click": "activate"
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": true,
        "on-click": "alacritty -e btop",
        "interval": 2
    },
    "memory": {
        "format": " {}%",
        "tooltip": true,
        "on-click": "alacritty -e btop",
        "interval": 2
    },
    "temperature#cpu": {
        // "thermal-zone": 2,
        //"hwmon-path": "/sys/class/hwmon/hwmon5/temp2_input",
        "critical-threshold": 70,
        "format-critical": "{icon} {temperatureC}°C",
        "format": "{icon} {temperatureC}°C",
        "format-icons": [
            "",
            "",
            ""
        ],
        "tooltip": true,
        "on-click": "alacritty -e nvtop",
        "interval": 2
    },
    "temperature#gpu": {
        // "thermal-zone": 2,
        "hwmon-path": "/tmp/nvidia-temp/temp",
        "critical-threshold": 70,
        "format-critical": "{icon} {temperatureC}°C",
        "format": "{icon} {temperatureC}°C",
        "format-icons": [
            ""
        ],
        "tooltip": true,
        "on-click": "alacritty -e nvtop",
        "interval": 2
    },
    "disk#default": {
        "format": " {percentage_used}%",  // ({free})",
        "tooltip": true,
        //"on-click": "alacritty -e btop",
        "interval": 2
    },
    "disk#system": {
        "format": " {percentage_used}%,",  // ({free})",
        "tooltip": true,
        //"on-click": "alacritty -e btop",
        "interval": 2
    },
    "disk#data": {
        "format": "{percentage_used}%",  // ({free})",
        "tooltip": true,
        //"on-click": "alacritty -e btop",
        "interval": 2,
        "path": "/mnt/data"
    },
    "custom/monitor": {
        // "scroll-step": 1, // %, can be a float
        "format": "{}", // {format_source}
        "tooltip": true,
        "exec": "cat /tmp/custom_monitor_waybar",
        "return-type": "json",
        "on-click": "~/.scripts/mirror.sh",
        "on-click-right": "~/.scripts/external.sh",
        "signal": 3
    },
    "custom/updates": {
        "format": "{}",
        "exec": "~/.scripts/updates",
        "return-type": "json",
        "on-click": "~/.scripts/updates update",
        "interval": 7320,
        "tooltip": true,
        "signal": 4
        // "tooltip-format": "{}",
        // "exec-tooltip": "~/.scripts/updates tooltip"
    },
    "hyprland/window": {
        "format": "{}",
        // "separate-outputs": true,
        // "max-length": 35
    },
