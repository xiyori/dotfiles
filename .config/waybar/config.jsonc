    "custom/sound": {
        // "scroll-step": 1, // %, can be a float
        "format": "{}", // {format_source}
        "tooltip": true,
        "escape": true,
        "exec": "~/.scripts/audio/custom_sound.sh",
        "return-type": "json",
        "on-click": "~/.scripts/audio/player.sh play-pause",
        "on-click-right": "~/.scripts/audio/next_active_sink.sh",
        "on-scroll-up": "~/.scripts/audio/volume.sh up",
        "on-scroll-down": "~/.scripts/audio/volume.sh down",
        "signal": 1,
        "interval": 2
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon} {percent}%",
        "tooltip-format": "Brightness {percent}%",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            ""
        ],
        "on-scroll-up": "~/.scripts/brightness.sh up",
        "on-scroll-down": "~/.scripts/brightness.sh down",
        // "interval": 2
        "interval": "once"
    },
    "battery": {
        "states": {
            "good": 100,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-charging": "󰂄 {capacity}%",
        "format-plugged": "󰚥 {capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        "format-full": "󱟢 {capacity}%",
        "format-icons": [
            "󰁺",
            "󰁻",
            "󰁼",
            "󰁽",
            "󰁾",
            "󰁿",
            "󰂀",
            "󰂁",
            "󰂂",
            "󰁹"
        ],
        "interval": 2
    },
